@model IEnumerable<Booking.Core.Entities.BookingItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


  <p><a asp-controller="Movies" asp-action="Index">Now-Showing</a></p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.ImageFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.MovieName)
                    </td>
                    <td>
                        <img src="~/gallery/@Html.DisplayFor(modelItem => item.Movie.ImageFile)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.Datetime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        <a asp-action="Buy" asp-route-id="@item.Movie.Id">Add-Seats</a> |
                        <a asp-action="RemoveSeat" asp-route-id="@item.Movie.Id">Remove-Seats</a> |
                        <a asp-action="Remove" asp-route-id="@item.Movie.Id">Cancel-Booking</a> |
                        <a asp-action="Confirm" asp-route-id="@item.Movie.Id">Confirm-Booking</a>
                        @*<a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>*@
                    </td>
                </tr>

            }
        }

    </tbody>
   
</table>
